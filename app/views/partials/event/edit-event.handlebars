                      {{/each}}
                    </select>
                  </div>
                </div>
                <div class="col-sm-6">
                  <div class="form-group">
                    <label>Date de début (jour/mois/année) *</label>
                    <div class="row">
                      <div class="col-4">
                        <select class="form-control" name="jourDebut" required>
