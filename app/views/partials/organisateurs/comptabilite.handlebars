<div class="container-fluid">
  <div class="row bg-dark-blue">
    <div class="col-12 text-center mt-3 pt-4 pb-5">
      <a href="/organisateur/events" class="btn btn-outline-light border-0 m-2"><i class="fa fa-calendar-o mr-2" aria-hidden="true"></i>Mes événements</a>
      <span class="d-inline-block mx-3 text-white"><i class="fa fa-angle-right" aria-hidden="true"></i></span>
      <a href="/organisateur/comptabilite/{{user.id}}" class="btn btn-light m-2"><i class="fa fa-university mr-2"></i>Comptabilité</a>
      <a href="https://shop.izir.fr" class="btn btn-outline-light m-2"><i class="fa fa-shopping-cart mr-2" aria-hidden="true"></i>Lots</a>
    </div>
  </div>
</div>
<div class="container" id="certificat_upload_page">
	{{#if errors}}
    {{#each errors}}
      <div class="alert alert-danger">{{msg}}</div>
    {{/each}}
	{{/if}}
	<form method="post" action="/organisateur/comptabilite/{{user.id}}">
	    <!-- VALIDITE-->
	    <div class="row">
	    	<div class="col-12 mt-5">
	    		<h2>RIB</h2>
	    	</div>
	    </div>
	    <div class="row">
		    <div class="col-12 mx-auto spacer-sm-bottom spacer-sm-top">
					<div class="input-group">
						<div class="input-group-addon">Titulaire *</div>
						<input type="text" class="form-control"  name="titulaire" value="{{user.titulaire}}" required placeholder="Exemples: John Doe, Courir ici, ...">
					</div>
				</div>
			</div>
	    <div class="row">
		    <div class="col-12 mx-auto spacer-sm-bottom">
					<div class="input-group">
						<div class="input-group-addon">Code établissement *</div>
						<input type="text" class="form-control"  name="code_etablissement" value="{{user.code_etablissement}}" required>
					</div>
				</div>
			</div>
	    <div class="row">
	    	<div class="col-12 mx-auto spacer-sm-bottom">					
				<div class="input-group">
					<div class="input-group-addon">Code Guichet *</div>
					<input type="text" class="form-control" name="code_guichet" value="{{user.code_guichet}}" required>
				</div>    		
	    	</div>
	    </div>
	    <div class="row">
	    	<div class="col-12 mx-auto spacer-sm-bottom">					
				<div class="input-group">
					<div class="input-group-addon">Numéro de compte *</div>
					<input type="text" class="form-control" name="numero_de_compte" value="{{user.numero_de_compte}}" required>
				</div>    		
	    	</div>
	    </div>
	    <div class="row">
	    	<div class="col-12 mx-auto spacer-sm-bottom">					
				<div class="input-group">
					<div class="input-group-addon">Clé RIB *</div>
					<input type="text" class="form-control" name="cle_RIB" value="{{user.cle_RIB}}" required>
				</div>    		
	    	</div>
	    </div>
	    <div class="row">
	    	<div class="col-12">
	    		<button type="submit" class="btn btn-default spacer-sm-top">Enregistrer</button>
	    	</div>
	    </div>
	</form>
	<p class="legend"><br><em>* Champs obligatoire, pour faire les reversements des sommes collectées, nous avons besoin de votre RIB</em></p>
</div>