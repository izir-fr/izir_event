  	<div class="container-fluid">
      
      <div id="mobile-menu" class="row d-sm-down">
        <div class="col-2">
          {{#if user}}
          <i id="mobile-menu-trigger" class="fa fa-bars fa-2x spacer-sm-top spacer-xs-bottom" aria-hidden="true"></i>
          {{/if}}
        </div>
        <div class="col-5 spacer-xs-top">
          <span id="smallscreen-logo"></span>
        </div>
        <div class="col-5 text-right">
          <span id="smallscreen-user"></span>
          <span id="smallscreen-search"></span>
        </div>
      </div>
      
      <div class="row">
        <div class="col-md-2 bg-light">
          <header id="profil-menu" class="spacer-xs-left spacer-xs-right sticky-top d-sm-up">
            <span id="smallscreen-menu-hidde">
              <div class="row">
                <div class="col-12 spacer-sm-top spacer-sm-bottom text-center" id="fullscreen-logo">
                  <a href="/" alt ="EventIzir" id="logo" >
                    <img src="/img/logo.png" alt="event.izir.fr" class="img img-fluid">
                  </a>
                </div>
              </div>            
              <div class="row">
                <div class="col-12 spacer-sm-top" id="fullscreen-search">
                  <a href="/event/finder" alt="Mon compte" class="d-flex" id="menu-search-block">
                    <i class="fa fa-search fa-2x txt-dark-blue spacer-xs-right"></i>
                    <p class="spacer-xs-left" id="menu-search-text">Rechercher une épreuve</p>
                  </a>
                </div>
              </div>
              {{#if user}}
              <div class="row">
                <div class="col-12" id="fullscreen-user">
                  <a href="/user/profil/{{user.id}}" alt="Mon compte" class="d-flex txt-dark-blue spacer-sm-top text-capitalize" id="user-link">
                    <i class="fa fa-user-circle fa-2x"> </i> <p class="spacer-xs-left spacer-xs-bottom" id="menu-user-name">{{user.name}} {{user.surname}}</p>
                  </a>
                </div>
              </div>              
            </span>

            <div class="row">
              <div class=" col-sm-6 col-md-12 spacer-md-top" id="menu-participant">
                <h3><i class="fa fa-user-circle"></i> Participant</h3>
                <ul>
                  <li class="spacer-xs-top"><a href="/event/finder">S'incrire à une épreuve</a></li>
                  <li><a class="spacer-xs-top" href="/user/inscriptions/{{user.id}}/">Mes inscriptions</a></li>
                  <li><a class="spacer-xs-top" href="http://www.runnerbreizh.fr/coureur.php?CoureurNom={{user.surname}}&CoureurPrenom={{user.name}}" target="_blank">Mes classements</a></li>
                  <li><a class="spacer-xs-top" href="/user/certificat/{{user.id}}/">Mon certificat médical</a></li>
                  <li><a class="spacer-xs-top" href="/user/amis">Inviter des amis</a></li>
                  <li><a href="/user/edit-profil/{{user.id}}/">Editer mon profil</a></li>
                  <li><a href="/user/password-forgot">Mot de passe</a></li>
                </ul>
              </div>
              <div class=" col-sm-6 col-md-12 spacer-sm-top" id="menu-organisateur">
                <h3 class=""><i class="fa fa-calendar-check-o" ></i></i> Organisateur</h3>
                <ul>
                  <li class="spacer-xs-top"><a href="/event/post-event">Ajouter un évènement</a></li>
                  <li><a href="/user/epreuves/{{user.id}}">Mes évènements</a></li>
                  <li><a href="/user/comptabilite/{{user.id}}">Comptabilité</a></li>
                </ul>
              </div>
            </div>
            <div class="row">
              <div class="col-12">
                <a href="/user/logout" alt="Se déconnecter">
                  <span class="text-danger">Se déconnecter<i class="fa fa-sign-out  spacer-xs-left"></i></span>
                </a>
              </div>
            </div>
            {{else}}  

            <div class="row">
              <div class="col-12" id="fullscreen-user">
                <a href="/user/login" class="spacer-sm-top  d-flex login spacer-xs-bottom" id="user-link">
                  <i class="fa fa-user-circle txt-dark-blue fa-2x"> </i>
                  <p class="spacer-xs-left" id="menu-user-name">Connexion / Inscription</p>
                </a>                
              </div>
            </div>

            {{/if}}  

                   
          </header>          
        </div>
        <div class="col-md-10">
          <main role="main">

            <div class="container">
              <div class="row text-center">
                <div class="col-12">
                  {{#if success_msg}}
                    <div class="alert alert-success">{{success_msg}}</div>
                  {{/if}}

                  {{#if error_msg}}
                    <div class="alert alert-danger">{{error_msg}}</div>
                  {{/if}}

                  {{#if error}}
                    <div class="alert alert-danger">{{error}}</div>
                  {{/if}}                
                </div>
              </div>
            </div>
            
            <section class="row">
              {{{body}}}
            </section>

          </main>
        </div>
      </div>


